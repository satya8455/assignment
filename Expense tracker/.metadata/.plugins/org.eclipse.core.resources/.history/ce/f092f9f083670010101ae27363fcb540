package com.watsoo.expense.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.watsoo.expense.dto.Response;
import com.watsoo.expense.service.DashboardService;

@RestController
public class DashboardController {

	@Autowired
	private DashboardService dashboardService ;
	
	@GetMapping("get/all/dashboard/data/{userId}")
	public ResponseEntity<?> getAllExpenses(@PathVariable Long userId,
											@RequestParam(required = false) Long walletId,
											@RequestParam(required = false) String month){
		Response<?> response = dashboardService.getDashboardSummary(userId,walletId,month);
		return new ResponseEntity<>(response, HttpStatus.valueOf(response.getResponseCode()));
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	@GetMapping("/dashboard/summary/{userId}")
	public ResponseEntity<?> getDashboardSummary(
	        @PathVariable Long userId,
	        @RequestParam(required = false) String month,
	        @RequestParam(required = false) Long walletId) {
	    
	    Response<?> response = expenseService.getDashboardSummary(userId, walletId, month);
	    return new ResponseEntity<>(response, HttpStatus.valueOf(response.getResponseCode()));
	}

}
