spring.application.name=api-gateway
server.port=9070

spring.cloud.gateway.server.webflux.routes[0].id=wallet-service
spring.cloud.gateway.server.webflux.routes[0].uri=lb://WALLET-SERVICE
spring.cloud.gateway.server.webflux.routes[0].predicates[0]=Path=/wallets/**
spring.cloud.gateway.server.webflux.routes[0].filters[0]=StripPrefix=1

spring.cloud.gateway.server.webflux.routes[1].id=expense-service
spring.cloud.gateway.server.webflux.routes[1].uri=lb://EXPENSE-SERVICE
spring.cloud.gateway.server.webflux.routes[1].predicates[0]=Path=/expenses/**
spring.cloud.gateway.server.webflux.routes[1].filters[0]=StripPrefix=1

# Eureka config
eureka.client.service-url.defaultZone=http://localhost:8761/eureka
eureka.client.register-with-eureka=true
eureka.client.fetch-registry=true
